#!/usr/bin/env bash

app="wpctl"

#Icons
sink="@DEFAULT_AUDIO_SINK@"
source='@DEFAULT_AUDIO_SOURCE@'

function get_mute() {
	$app status "$1" | grep -qi muted && echo 0 || echo 1
}

get_vol() { echo "$($app get-volume $sink | cut -d ' ' -f2) * 100" | bc | cut -d '.' -f1; }

change_vol() {
	if [[ $(get_mute $sink) -eq 0 ]]; then
		$app set-volume $sink "$1"
	fi
}

set_vol() {
	expected_volume=$1
	if [[ $(get_mute $sink) -eq 0 ]]; then
		current_volume=$(get_vol)
		volume_to_set=$((expected_volume - current_volume))
		$app --change-volume $volume_to_set
	fi

}

toggle_mute() { $app set-mute $sink toggle; }

toggle_mic() {
	$app set-mute $source toggle
	pkill -SIGRTMIN+8 waybar
}

case "$1" in
-s)
	shift
	set_vol "$1"
	;;
-u) change_vol 0.02+ ;;
-d) change_vol 0.02- ;;
-U) change_vol 0.1+ ;;
-D) change_vol 0.1- ;;
-m) toggle_mute ;;
-M) toggle_mic ;;
-gM) get_mute $source ;;
esac
